<h1>Editing Comment</h1>
<%= simple_form_for(@comment) do |f| %>
  <div class='form-inputs'>
    <%= f.input :text, label: false %>
    <%= f.input :commenter, as: :hidden, disabled: true %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', "/tasks/#{params[:task_id]}" %>