<h1>Tasks</h1>
<table class="table">
  <thead>
    <tr>
      <th width="20%"><strong>Subject</strong></th>
      <th width="20%"><strong>Assigne</strong></th>
      <th width="20%"><strong>Status</strong></th>
      <th width="20%"><strong>Created by</strong></th>
      <th width="20%"><strong>Last update</strong></th>
      <th width="20%"><strong>Methods</strong></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.subject %></td>
        <td><%= link_to task.assigne, edit_user_path(task.user_id) %></td>
        <td><%= task.status %></td>
        <td><%= task.created_by %></td>
        <td><%= task.created_at %></td>
        <td>
          <%= link_to 'Show', task %>
          <%= link_to 'Edit', edit_task_path(task) %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
